{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "test"],
    "include": ["src/**/*"]
}
